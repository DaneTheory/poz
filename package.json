{
  "name": "propa",
  "version": "0.0.1",
  "description": "a project patcher",
  "repository": {
    "url": "ULIVZ/propa",
    "type": "git"
  },
  "main": "dist/propa.js",
  "module": "dist/propa.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test:cov": "jest --coverage && npm run lint",
    "test": "npm run lint && jest",
    "lint": "xo",
    "prepublish": "npm run build",
    "build": "bili --config build/bili.config.js",
    "example": "poi --config build/poi.config.js",
    "build:example": "poi build --config build/poi.config.js",
    "gh": "gh-pages -d example/dist",
    "deploy": "npm run build:example && npm run gh"
  },
  "author": "ULIVZ <chl814@foxmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "mitt": "^1.1.2",
    "handlebars2": "^0.0.12"
  },
  "devDependencies": {
    "babel-preset-env": "^1.4.0",
    "bili": "^0.17.0",
    "eslint-config-rem": "^3.0.0",
    "gh-pages": "^1.0.0",
    "jest-cli": "^19.0.0",
    "poi": "^9.1.4",
    "raw-loader": "^0.5.1",
    "rollup-plugin-string": "^2.0.2",
    "xo": "^0.18.0"
  },
  "xo": {
    "extends": "rem",
    "envs": [
      "jest"
    ]
  }
}
